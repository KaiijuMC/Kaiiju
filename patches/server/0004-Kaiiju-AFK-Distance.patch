diff --git a/src/main/java/net/minecraft/server/level/ServerPlayer.java b/src/main/java/net/minecraft/server/level/ServerPlayer.java
index d62bf95fb067c2e2a4fc9b2757c636bd4ee75bea..b937e5bcb63b40fba7fc8c614b4ad743c0860922 100644
--- a/src/main/java/net/minecraft/server/level/ServerPlayer.java
+++ b/src/main/java/net/minecraft/server/level/ServerPlayer.java
@@ -2084,6 +2084,12 @@ public class ServerPlayer extends Player {
     public void resetLastActionTime() {
         this.lastActionTime = Util.getMillis();
         this.setAfk(false); // Purpur
+        // Kaiiju start
+        if (dev.kugge.kaiiju.Kaiijuconfig.useIdleDistances) { 
+            this.player.getCraftPlayer().setViewDistance(this.getBukkitEntity().getWorld().getViewDistance())
+            this.player.getCraftPlayer().setSimulationDistance(this.getBukkitEntity().getWorld().getSimulationDistance())
+        }
+        // Kaiiju end
     }
 
     // Purpur Start
